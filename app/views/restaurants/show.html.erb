<h1>List</h1>
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @restaurant.name %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @restaurant.address %></h6>
    <p class="card-text"><%= @restaurant.phone_number %></p>
    <p class="card-text"><%= @restaurant.category %></p>
  </div>
</div>

<h1>Reviews</h1>

<% @reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
  <% end %>


<%= link_to 'Back', restaurants_path %>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>

